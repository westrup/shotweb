<div id="header">
  <h1><%=APP_CONFIG['title']%></h1>
</div>

<div id="content">
  <ul class="list">
    <% @years.each do |year, events| %>
      <li>
		<%= link_to '<div class="ev">'.html_safe + image_tag(thumb_path(events.first.primary_source, :size => 200)) + '</div>'.html_safe +
	        year.to_s + '<br/>('.html_safe + pluralize(events.length, 'event') + ')<br/>'.html_safe, year_path(year) %>
      </li>
    <% end %>
  </ul>
  <ul class="list">
    <li><%= link_to h('Tag list'), tags_path %></li>
  </ul>
</div>
